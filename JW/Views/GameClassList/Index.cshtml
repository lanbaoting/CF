        {
            <section class="w-958 border tab-one mg-t10">
                <header class="ft-yh games-hd tab-hd">
                    <ul>
                        @{
                            string classStr = "class=\"hover\"";
                            foreach (var m in gameClassTabList)
                            {
                                <li @classStr>@m.Title</li>
                                classStr = "";
                            }
                        }
                    </ul>
                </header>
                <div class="tab-bd game-item">
                    @{

                        foreach (var m in gameClassTabList)
                        {
                            <article @classStr>
                                <ul class="mod-img-list games">
                                    @{
                                        var gameClassTabGames = gameClassTabGameList.Where(w => w.DjGameClassTabId == m.Id);
                                        foreach (var m1 in gameClassTabGames)
                                        {
                                            <li>
                                                <a href="/game/@(m1.DjGameId).html" target="_blank" class="img-box">
