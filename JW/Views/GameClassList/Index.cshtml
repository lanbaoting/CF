                var _ts = $(this);
                _ts.toggleClass('tags-on');
                $('.tags-category dl').toggleClass('tags-auto');
                _ts.is('.tags-on') ? _ts.text('收缩') : _ts.text('更多')
            })
            //TAB选项卡
            $('.w-958').TabList({
                Event: 'click'
            });
