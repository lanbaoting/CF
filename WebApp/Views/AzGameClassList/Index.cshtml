@model X.PagedList.IPagedList<Entity.Models.Jw_AzGame>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common
@{
    ViewBag.SeoTile = ViewBag.AzGameClass.SeoTile;
    ViewBag.SeoKey = ViewBag.AzGameClass.SeoKey;
    ViewBag.SeoDesc = ViewBag.AzGameClass.SeoDesc;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
    <section class="top-fixed">    
        <nav class="nav">
            @{
                var navigation2List = ViewBag.Navigation2List as List<Entity.Models.Jw_Navigation2>;
                if (navigation2List != null)
                {
                    foreach (var m in navigation2List)
                    {
                        <a href="@m.LinkAddress"><span>@m.Name</span></a>
                    }
                }
            }
        </nav>
    </section>
    <section class="top-nav">
        <section class="bg"></section>
        <section class="classify">
            <section id="tab-four" class="tab-list">
                <header class="tab-hd hd">
                    <ul>
                        <li class="on">文章分类</li>
                    </ul>
                </header>
                <div class="bd">
                    <article>
                        <ul class="classify-two mod-four">
                            @{
                                var articleTypeList = ViewBag.ArticleTypeList as List<Entity.Models.Jw_ArticleType>;

                                if (articleTypeList != null)
                                {
                                    foreach (var m in articleTypeList)
                                    {
                                        <li><a href="/newsclass/@m.Code/">@m.Name</a></li>
                                    }
                                }
                            }
                        </ul>
                    </article>
                </div>
            </section>
        </section>
    </section>
    <section class="box-fixed">
        <section class="box-one box-pd">
            <section class="classify-three classify-box">
                <div id="classify-one" class="more-con">
                    <ul class="mod-four more-bd">
                        @{
                            var gameClassList = ViewBag.GameClassList as List<Entity.Models.Jw_AzGameClass>;
                            if (gameClassList != null)
                            {
                                foreach (var m in gameClassList)
                                {
                                    if (m.Id == ViewBag.AzGameClass.Id)
                                    {
                                        <li class="on"><a href="/azgmcs/@m.Code/">@m.Name</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/azgmcs/@m.Code/">@m.Name</a></li>
                                    }
                                }
                            }
                        }
                    </ul>
                </div>
            </section>
        </section>
        <section class="box-one">
            <header class="mod-hd hd-two hd-three">
                <h2>@ViewBag.AzGameClass.Name</h2>
            </header>
            <ul class="mod-five box-pd mod-img-list">
                @{
                    if (Model != null)
                    {
                        foreach (var m in Model)
                        {
                            <li>
                                <a href="/azgame/@(m.Id).html">
                                    <img src="~/images/lgImg.gif" data-original="@m.CoverMap" />
                                    <h3 class="title">@m.Name</h3>
                                    <p>@m.Edition<em>&nbsp;</em>@m.GameSize</p>
                                    <p>语言：<i>@m.LanguageName</i></p>
                                    <p>@m.F_CreateDate.ToString("yyyy-MM-dd")</p>
                                    <span class="down">详情</span>
                                </a>
                            </li>

                        }
                    }
                }
            </ul>
            <div class="page">
                <div class="page-bd">
                    @Html.PagedListPager(Model, page => page == 1 ? "/azgmcs/" + ViewBag.AzGameClass.Code + "/" : "/azgmcs/" + ViewBag.AzGameClass.Code + "/" + page + ".html", new PagedListRenderOptions { LinkToNextPageFormat = "下一页", LinkToPreviousPageFormat = "上一页", DisplayLinkToIndividualPages = false, DisplayItemSliceAndTotal = false })
                </div>
            </div>
        </section>
    </section>
     
 